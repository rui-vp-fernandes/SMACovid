{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/rui-vp-fernandes/SMACovid/edit/main/App/schema.jsonld",
  "title": "SMACovid-19 - App schema",
  "description": "Information provided by a given App",
  "type": "object",
  {
    "properties": {
      "type": {
        "type": "string",
        "enum": ["App"],
        "description": "NGSI-LD Entity type"
      },
      "dyspnoea": {
        "type": "booblean"
      },
      "cough": {
        "type": "boolean"
      },
      "anosmia": {
        "type": "boolean"
      },
      "contactCovid": {
        "type": "boolean"
      },
      "diarrhea": {
        "type": "integer",
        "minimum": 0
      },
      "hasInfoAbout": {
        "type": "string",
        "format": "uri"
      },
    },
  }
  "required": ["type", "id"]
}
