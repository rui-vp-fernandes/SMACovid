{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/rui-vp-fernandes/SMACovid/blob/main/2ndVersion/Wearable/bloodPressure/schema.jsonld",
  "title": "SMACovid-19 - Wearable schema",
  "description": "Relates a wearable device with the measurements it can provide",
  "type": "object",
  {
    "properties": {
      "type": {
        "type": "string",
        "enum": ["Wearable"],
        "description": "NGSI-LD Entity type"
      },
      "hasBloodPressureSensor": {
        "type": "string",
        "format": "uri"
      },
      "hasHeartRateSensor": {
        "type": "string",
        "format": "uri"
      },
      "hasTemperatureSensor": {
        "type": "string",
        "format": "uri"
      },
      "hasOxygenSaturationSensor": {
        "type": "string",
        "format": "uri"
      },
      "knowsAbout": {
        "type": "string",
        "format": "uri"
      },
    },
  }
  "required": ["type", "id"]
}
